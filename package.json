{
  "name": "grav.client",
  "version": "2.2.0",
  "description": "a node.js client for the gravatar xml-rpc api",
  "main": "Release/Presentation/index.js",
  "types": "Release/Presentation/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "ts-node node_modules/jasmine/bin/jasmine --config=jasmine.json",
    "test:cov": "nyc -r text -e .ts -x \"**/*.spec.ts\" npm run test",
    "test:e2e": "ts-node node_modules/jasmine/bin/jasmine --config=Tests/jasmine.e2e.json",
    "test:spec": "cucumber-js Specification/**/*.feature",
    "postinstall": "npm run build",
    "format": "prettier --write \"**/*.ts\"",
    "coverage": "nyc npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrtillman/grav.client.git"
  },
  "keywords": [
    "gravatar",
    "xml-rpc",
    "api",
    "client"
  ],
  "author": "mrtillman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mrtillman/grav.client/issues"
  },
  "homepage": "https://github.com/mrtillman/grav.client#readme",
  "dependencies": {
    "@types/isomorphic-form-data": "^2.0.0",
    "@types/node": "^12.12.11",
    "@types/node-fetch": "^2.5.3",
    "babel-register": "^6.26.0",
    "cucumber": "^6.0.5",
    "dotenv": "^8.2.0",
    "expect": "^24.9.0",
    "fetch-mock": "^8.0.0",
    "handlebars": "^4.5.3",
    "isomorphic-form-data": "^2.0.0",
    "isomorphic-unfetch": "^3.0.0",
    "ts-md5": "^1.2.7",
    "typescript": "^3.7.2",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/jasmine": "^3.4.6",
    "coveralls": "^3.0.9",
    "jasmine": "^3.5.0",
    "nyc": "^14.1.1",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.6.1"
  }
}
